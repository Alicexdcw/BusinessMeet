<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">?android:attr/windowBackground</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.ToolBarStyle">
        <item name="actionMenuTextColor">@color/colorAlmostBlack</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="searchBar">
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/search_radius</item>
        <item name="searchIcon">@drawable/ic_search_black_24dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:shape">rectangle</item>
    </style>

    <style name="searchIcon">
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:background">@drawable/ic_search_black_512dp_toolbar</item>
    </style>

    <style name="searchText">
        <item name="android:text">Search</item>
        <item name="android:textColor">@color/colorAlmostBlack</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">26dp</item>
    </style>

    <style name="searchIcon_cancel">
        <item name="android:layout_height">12dp</item>
        <item name="android:layout_width">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:background">@drawable/ic_cancel_16dp</item>
    </style>

</resources>